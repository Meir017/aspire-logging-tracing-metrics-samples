{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "index.md",
          "docs/**.md",
          "../README.md"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "distributed-app-demo",
      "_appTitle": "distributed-app-demo",
      "_enableSearch": true,
      "pdf": true,
      "_rootPath": "../README.md"
    },
    "overwrite": [
      "../README.md"
    ]
  }
}